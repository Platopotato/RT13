{
  "name": "radix-tribes-server",
  "version": "1.1.1",
  "description": "Backend server for Radix Tribes game.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev:backend": "nodemon server.js",
    "dev:frontend": "vite",
    "dev": "concurrently -k -n BACKEND,FRONTEND -c yellow,cyan \"npm:dev:backend\" \"npm:dev:frontend\"",
    "build": "vite build && node -e \"const fs=require('fs');fs.rmSync('public',{recursive:true,force:true});fs.cpSync('dist','public',{recursive:true});\"",
    "docker:build": "npm ci --omit=dev && npm run build",
    "docker:start": "node server.js"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "socket.io-client": "^4.7.5",
    "express": "^4.19.2",
    "socket.io": "^4.7.5",
    "cors": "^2.8.5",
    "dotenv": "^16.4.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.3",
    "concurrently": "^8.2.2",
    "vite": "^5.2.0",
    "typescript": "^5.4.5",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0"
  },
  "engines": {
    "node": ">=18"
  }
}
